package com.chengcai.tools;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;

public class JdbcUtils {
	
	//封装数据库连接，可以使用GetConnection方法获取Connection对象
	public static Connection GetConnection(){
		
		Connection conn =null;
		try{
			Class.forName("oracle.jdbc.driver.OracleDriver");
			conn = DriverManager.getConnection("jdbc:oracle:thin:@192.168.0.32:1521:orcl", "scott", "1234");

		}catch (Exception e){
			e.printStackTrace();
		}
		return conn;
		
	}
	
	//封装  数据库查询
	public static ResultSet query(String sql,Object[] obj){
		
		Connection conn = getConnection();
		
	}

}
